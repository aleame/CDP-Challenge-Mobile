{
  "name": "cdp_challenge_mobile",
  "version": "1.0.0",
  "description": "Mobile automation project for CDP Challenge",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/aleame/CDP-Challenge-Mobile.git"
  },
  "author": "aleame",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.3.1",
    "@wdio/allure-reporter": "^9.24.0",
    "@wdio/appium-service": "^9.24.0",
    "@wdio/browserstack-service": "^9.24.0",
    "@wdio/cli": "^9.24.0",
    "@wdio/globals": "^9.23.0",
    "@wdio/local-runner": "^9.24.0",
    "@wdio/mocha-framework": "^9.24.0",
    "@wdio/spec-reporter": "^9.24.0",
    "allure-commandline": "^2.37.0",
    "appium-uiautomator2-driver": "^7.0.0",
    "expect-webdriverio": "^5.6.4",
    "wdio-wait-for": "^3.1.1"
  },
  "scripts": {
    "clean": "rm -rf allure-results allure-report",
    "wdio": "npm run clean && wdio run ./wdio.conf.ts",
    "wdio:local": "npm run clean && export EXECUTION=local && wdio run ./wdio.conf.ts",
    "wdio:bs": "npm run clean && export EXECUTION=bs && wdio run ./wdio.conf.ts",
    "wdio:debug": "export DEBUG=true && wdio run ./wdio.conf.ts",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "report": "npm run report:generate && npm run report:open"
  }
}